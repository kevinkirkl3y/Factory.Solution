@{
  Layout = "_Layout";
}
<div class="container">
  @using Factory.Models;

  @model List<Factory.Models.Engineer>;

  <h1>Engineers</h1>
  <hr />

  @if (@Model.Count == 0)
  {
    <h3>There are currently no Engineers employed.</h3>
  }
  else
  {
    <ul class="no-bullets">
      @foreach (Engineer engineer in Model)
      {
          <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId})</li><br>
      }
    </ul>
  }
  <br><p>@Html.ActionLink("Add New Hire", "Create")</p>
  <br><p>@Html.ActionLink("Homepage", "Index", "Home")</p>
</div>