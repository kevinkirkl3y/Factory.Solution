@{
  Layout = "_Layout";
}
<div class="container">
  @using Factory.Models;

  @model List<Factory.Models.Machine>;

  <h1>Current Machines</h1>
  <hr />

  @if (@Model.Count == 0)
  {
    <h3>There is currently no installed machinery.</h3>
  }
  <ul class="no-bullets">
    @foreach (Machine machine in Model)
    {
        <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId})</li><br>
    }
  </ul>
  <br><p>@Html.ActionLink("Log Machinery Install", "Create")</p>
  <br><p>@Html.ActionLink("Homepage", "Index", "Home")</p>
</div>